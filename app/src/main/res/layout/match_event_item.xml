<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/dateEvent"
            style="@style/textViewDetailEvent.Tanggal"
            android:layout_marginBottom="8dp"
            tools:text="Date" />

        <TextView
            android:id="@+id/timeEvent"
            style="@style/textViewMatchEvent.Time"
            android:layout_marginBottom="8dp"
            tools:text="Time" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/nameHomeTeam"
                style="@style/textViewMatchEvent.Match.HomeTeam"
                tools:text="Home" />

            <TextView
                android:id="@+id/scoreHomeTeam"
                style="@style/textViewMatchEvent.Match.ScoreHomeTeam"
                tools:text="0" />

            <TextView
                style="@style/textViewMatchEvent.Match.Versus"
                android:text="@string/versus" />

            <TextView
                android:id="@+id/scoreAwayTeam"
                style="@style/textViewMatchEvent.Match.ScoreAwayTeam"
                tools:text="0" />

            <TextView
                android:id="@+id/nameAwayTeam"
                style="@style/textViewMatchEvent.Match.AwayTeam"
                tools:text="Away" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>